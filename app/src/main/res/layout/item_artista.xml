<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="92dp"
        android:layout_height="157dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgAbduzcan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/abduzcan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/lblNombreArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="ingrese Nombres"
        android:text="" />

    <TextView
        android:id="@+id/lblApellidosArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="ingrese Apellidos"
        android:text="" />
    <TextView
        android:id="@+id/lblNoArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="ingrese Apellidos"
        android:text="" />
</LinearLayout>
